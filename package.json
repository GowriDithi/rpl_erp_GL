{
    "name": "rpl-erp",
    "version": "0.1.0",
    "description": "",
    "type": "module",
    "scripts": {
        "dev:web": "pnpm --filter @rpl-erp/client-web dev",
        "dev:server": "pnpm --filter @rpl-erp/server dev",
        "build:web": "pnpm --filter @rpl-erp/client-web build",
        "build:server": "pnpm --filter @rpl-erp/server build",
        "test": "pnpm --filter @rpl-erp/server test",
        "docker:dev": "docker compose --profile dev up",
        "docker:dev-web": "docker compose --profile dev up --no-deps dev-client-web",
        "docker:dev-server": "docker compose --profile dev up dev-server dev-db",
        "docker:prod": "docker compose --profile prod up --build",
        "docker:clean": "docker image prune -f",
        "lint": "eslint --cache --fix .",
        "format": "prettier --write --ignore-unknown .",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --cache --fix",
            "prettier --write --ignore-unknown"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.13.1",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.31.0",
        "@types/node": "^24.0.14",
        "eslint": "^9.31.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "globals": "^16.3.0",
        "husky": "^8.0.0",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.37.0",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "zod": "^4.0.5"
    }
}
